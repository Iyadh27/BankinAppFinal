<%- include('partials/header') %>

<div class="container mt-5">
  <div class="row">
    <div class="col-12">
      <div class="bg-dark text-white p-3 rounded">
        <h3 class="text-center">Hello</h3>
        <h2 class="text-center"><%= name %>,</h2>
      </div>
    </div>
  </div>

  <% if (savingsAccountNo) { %>
  <% if (currentAccountNo) { %>
  <div class="row mt-4">
    <div class="col-md-6">
      <div class="bg-light p-3 rounded">
        <h3>Savings Details:</h3>
        <h2>Account No: <%= savingsAccountNo %></h2>
        <h2>Savings Balance: <%= savingsAccountBalance %></h2>
        <h2>Withdrawals Left: <%= withdrawalsLeft %></h2>
        <a href="/savings"><button class="btn btn-dark">Check your Savings Account</button></a>
      </div>
    </div>
    <div class="col-md-6">
      <div class="bg-light p-3 rounded">
        <h3>Current Details:</h3>
        <h2>Account No: <%= currentAccountNo %></h2>
        <h2>Current Balance: <%= currentAccountBalance %></h2>
        <a href="/current"><button class="btn btn-dark">Check your Current Account</button></a>
      </div>
    </div>
  </div>
  <% } else { %>
  <div class="row mt-4">
    <div class="col-md-6">
      <div class="bg-light p-3 rounded">
        <h3>Savings Details:</h3>
        <h2>Account No: <%= savingsAccountNo %></h2>
        <h2>Savings Balance: <%= savingsAccountBalance %></h2>
        <h2>Withdrawals Left: <%= withdrawalsLeft %></h2>
        <a href="/savings"><button class="btn btn-dark">Check your Savings Account</button></a>
      </div>
    </div>
  </div>
  <% } %>
  <% } else if (currentAccountNo) { %>
  <div class="row mt-4">
    <div class="col-md-6">
      <div class="bg-light p-3 rounded">
        <h3>Current Details:</h3>
        <h2>Account No: <%= currentAccountNo %></h2>
        <h2>Current Balance: <%= currentAccountBalance %></h2>
        <a href="/current"><button class="btn btn-dark">Check your Current Account</button></a>
      </div>
    </div>
  </div>
  <% } %>

  <div class="row mt-4">
    <div class="col-12">
      <div class="bg-dark text-white p-3 rounded">
        <h3>Recent Transactions:</h3>
        <div class="table-responsive">
          <table class="table table-dark table-striped table-bordered">
            <thead>
              <tr>
                <th>Transaction ID</th>
                <th>Date</th>
                <th>Type</th>
                <th>Amount</th>
                <th>Initiated Account</th>
                <th>Receiver Account</th>
              </tr>
            </thead>
            <tbody>
              <% transactions.forEach(transaction => { %>
              <tr>
                <td><%= transaction.transaction_id %></td>
                <td><%= transaction.date %></td>
                <td><%= transaction.type %></td>
                <td><%= transaction.amount %></td>
                <td><%= transaction.initiated_acc %></td>
                <td><%= transaction.receiver_acc %></td>
              </tr>
              <% }); %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('partials/footer') %>
