<%- include('partials/header') %>
<style>
  .greeting-dashboard {
    color: white;
    background-color: #1a1a1a;
    padding: 1rem;
    padding-left: 4rem;
    border-radius: 1rem;
    margin: 1rem;
  }
  .tiles-container {
    display: flex;
    color: white;
    background-color: #1a1a1a;
    padding: 2rem;
    padding-left: 2rem;
    border-radius: 1rem;
    margin: 1rem;
  }
  .tile {
    background-color: white;
    margin: 2rem;
    width: 100%;
    height: 250px;
    border-radius: 1rem;
  }
  .tile-items {
    padding: 1rem;
    color: black;
    margin: 1rem;
  }
  .transactions-container {
    display: block;
    color: white;
    background-color: #1a1a1a;
    padding: 2rem;
    padding-left: 2rem;
    border-radius: 1rem;
    margin: 1rem;
  }
  button {
    background-color: #1a1a1a;
    color: white;
    border: none;
    border-radius: 1rem;
    padding: 1rem;
    margin-top: 0.5rem;
    margin-bottom: 1rem;
    font-size: 1rem;
    cursor: pointer;
  }
  button:hover {
    background-color: #333333;
  }
  * {
    margin: 0;
    padding: 0;
  }
  .table-box {
    margin: 50px auto;
  }

  .table-row {
    display: table;
    width: 80%;
    margin: 10px auto;
    font-family: sans-serif;
    background: transparent;
    padding: 12px 0;
    color: #ffffff;
    font-size: 13px;
    box-shadow: 0 1px 4px 0px rgba(0, 0, 50, 0.3);
  }
  .table-head {
    background: white;
    box-shadow: none;
    color: black;
    font-weight: 600;
    border-radius: 2rem;
  }
  .table-head .table-cell {
    border-right: none;
  }
  .table-cell {
    display: table-cell;
    width: 20%;
    text-align: center;
    padding: 4px 0;
    border-right: 1px solid #d6d4d4;
    vertical-align: middle;
  }
  .first-cell {
    text-align: center;
    padding-left: 10px;
  }
  .last-cell {
    border-right: none;
  }

  @media only screen and (max-width: 600px) {
    .table-row {
      font-size: 11px;
    }
  }
</style>
<div class="greeting-dashboard">
  <h3>Hello</h3>
  <h2><%= name %>,</h2>
</div>

<% if (savingsAccountNo){ %>
<div class="tiles-container d-block">
  <div class="tile" id="savings">
    <div class="tile-items">
      <h3 style="margin-bottom: 1.5rem">Savings Details:</h3>
      <h2>Account No: <%= savingsAccountNo %></h2>
      <h2>Savings Balance: <%= savingsAccountBalance %></h2>
      <h2 style="margin-bottom: 1rem">
        Withdrawals left: <%= WithdrawalsLeft %>
      </h2>
      <a href="/savings"><button>Check your Savings Account</button></a>
    </div>
  </div>
  <% } %> <% if (currentAccountNo){ %>
  <div class="tiles-container d-block">
    <div class="tile" id="current">
      <div class="tile-items">
        <h3 style="margin-bottom: 2rem">Current Details:</h3>
        <h2>Account No: <%= currentAccountNo %></h2>
        <h2 style="margin-bottom: 2rem">
          Current Balance: <%= currentAccountBalance %>
        </h2>
        <a href="/current"><button>Check your Current Account</button></a>
      </div>
    </div>
  </div>
  <% } %>

  <div class="transactions-container">
    <div style="width: 100%" class="transactions">
      <h3 style="margin-left: 2rem">Recent Transactions:</h3>
      <div class="table-box">
        <div class="table-row table-head">
          <div class="table-cell first-cell">
            <p>Transaction ID</p>
          </div>
          <div class="table-cell">
            <p>Date</p>
          </div>
          <div class="table-cell last-cell">
            <p>Amount</p>
          </div>
        </div>

        <div class="table-row">
          <div class="table-cell first-cell">
            <p>000000</p>
          </div>
          <div class="table-cell">
            <p>999</p>
          </div>
          <div class="table-cell last-cell">
            <p>Random</p>
          </div>
        </div>

        <div class="table-row">
          <div class="table-cell first-cell">
            <p>111111</p>
          </div>
          <div class="table-cell">
            <p>999</p>
          </div>
          <div class="table-cell last-cell">
            <p>Random</p>
          </div>
        </div>
      </div>
    </div>
  </div>
  <%- include('partials/footer') %>
</div>
