<%- include('partials/header') %>
<style>
  .greeting-dashboard {
    background-color: #1a1a1a;
    padding: 1rem;
    border-radius: 1rem;
    margin: 1rem;
    color: white;
    text-align: center;
  }

  .tiles-container {
    display: flex;
    background-color: #1a1a1a;
    padding: 2rem;
    border-radius: 1rem;
    margin: 1rem;
  }

  .tile {
    background-color: white;
    margin: 2rem;
    border-radius: 1rem;
    padding: 1rem;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
  }

  .tile-items {
    color: #333;
  }

  .transactions-container {
    background-color: #1a1a1a;
    padding: 2rem;
    border-radius: 1rem;
    margin: 1rem;
    color: white;
  }

  button {
    background-color: #1a1a1a;
    color: white;
    border: none;
    border-radius: 1rem;
    padding: 1rem 2rem;
    margin-top: 0.5rem;
    margin-bottom: 1rem;
    font-size: 1rem;
    cursor: pointer;
    transition: background-color 0.3s;
  }

  button:hover {
    background-color: #333333;
  }

  .table-box {
    margin: 50px auto;
  }

  .table-row {
    display: table;
    width: 100%;
    font-family: sans-serif;
    background: transparent;
    padding: 12px 50px;
    color: #333;
    font-size: 13px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
    border-radius: 1rem;
  }

  .table-head {
    background: white;
    color: #333;
    font-weight: 600;
    border-radius: 1rem;
  }

  .table-head .table-cell {
    border-right: none;
  }

  .table-cell {
    display: table-cell;
    text-align: center;
    padding: 4px 0;
    border-right: 1px solid #d6d4d4;
    vertical-align: middle;
  }

  .first-cell {
    text-align: center;
    padding-left: 10px;
  }

  .last-cell {
    border-right: none;
  }
</style>
<div class="container">
  <div class="greeting-dashboard">
    <h3>Hello</h3>
    <h2><%= name %>,</h2>
  </div>

  <% if (savingsAccountNo){ %>
  <div class="row">
    <div class="col-md-6">
      <div class="tile" id="savings">
        <div class="tile-items">
          <h3>Savings Details:</h3>
          <h2>Account No: <%= savingsAccountNo %></h2>
          <h2>Savings Balance: <%= savingsAccountBalance %></h2>
          <h2>Withdrawals Left: <%= withdrawalsLeft %></h2>
          <a href="/savings"><button class="btn btn-dark">Check your Savings Account</button></a>
        </div>
      </div>
    </div>
  </div>
  <% } %> <% if (currentAccountNo){ %>
  <div class="row">
    <div class="col-md-6">
      <div class="tile" id="current">
        <div class="tile-items">
          <h3>Current Details:</h3>
          <h2>Account No: <%= currentAccountNo %></h2>
          <h2>Current Balance: <%= currentAccountBalance %></h2>
          <a href="/current"><button class="btn btn-dark">Check your Current Account</button></a>
        </div>
      </div>
    </div>
  </div>
  <% } %>
  <div class="row">
    <div class="col-md-12">
      <div class="transactions-container">
        <h3>Recent Transactions:</h3>
        <div class="table-box">
          <div class="table-row table-head">
            <div class="table-cell first-cell">
              <p>Transaction ID</p>
            </div>
            <div class="table-cell">
              <p>Date</p>
            </div>
            <div class="table-cell">
              <p>Type</p>
            </div>
            <div class="table-cell">
              <p>Amount</p>
            </div>
            <div class="table-cell">
              <p>Initiated Account</p>
            </div>
            <div class="table-cell last-cell">
              <p>Receiver Account</p>
            </div>
          </div>
          <% transactions.forEach(transaction => { %>
          <div class="table-row">
            <div class="table-cell first-cell">
              <p><%= transaction.transaction_id %></p>
            </div>
            <div class="table-cell">
              <p><%= transaction.date %></p>
            </div>
            <div class="table-cell">
              <p><%= transaction.type %></p>
            </div>
            <div class="table-cell">
              <p><%= transaction.amount %></p>
            </div>
            <div class="table-cell">
              <p><%= transaction.initiated_id %></p>
            </div>
            <div class="table-cell last-cell">
              <p><%= transaction.receiver_id %></p>
            </div>
          </div>
          <% }); %>
        </div>
      </div>
    </div>
  </div>
</div>
<%- include('partials/footer') %>
