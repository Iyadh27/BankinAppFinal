<%- include('partials/header.ejs') %>

<div class="container">
  <div class="customer-details mt-4 p-4 border rounded shadow">
    <h1>Customer Details</h1>

    <div class="card my-4">
      <div class="card-header">
        <h3>Personal Details</h3>
      </div>
      <div class="card-body">
        <p class="mb-0"><strong>Name:</strong> <%= name %></p>
        <p class="mb-0"><strong>Address:</strong> <%= address %></p>
        <p class="mb-0"><strong>Phone:</strong> <%= phone %></p>
      </div>
    </div>

    <% if (savingsAccountNo) { %>
    <div class="card my-4">
      <div class="card-header">
        <h3>Savings Account Details</h3>
      </div>
      <div class="card-body">
        <p class="mb-0"><strong>Savings Account:</strong> <%= savingsAccountNo %></p>
        <p class="mb-0"><strong>Savings Balance:</strong> <%= savingsAccountBalance %></p>
        <p class="mb-0"><strong>Remaining Withdrawals:</strong> <%= withdrawalsLeft %></p>
        <p class="mb-0"><strong>Branch ID:</strong> <%= savingsBId %></p>
      </div>
    </div>
    <% } %>

    <% if (currentAccountNo) { %>
    <div class="card my-4">
      <div class="card-header">
        <h3>Current Account Details</h3>
      </div>
      <div class="card-body">
        <p class="mb-0"><strong>Current Account:</strong> <%= currentAccountNo %></p>
        <p class="mb-0"><strong>Current Balance:</strong> <%= currentAccountBalance %></p>
        <p class="mb-0"><strong>Branch ID:</strong> <%= currentBId %></p>
      </div>
    </div>
    <% } %>

    <% if (fd_exist) { %>
    <div class="card my-4">
      <div class="card-header">
        <h3>FD Details</h3>
      </div>
      <div class="card-body">
        <p class="mb-0"><strong>Amount in FD:</strong> <%= fdAmount %></p>
        <p class="mb-0"><strong>Start Date:</strong> <%= fdStart %></p>
        <p class="mb-0"><strong>Duration:</strong> <%= fdDuration %></p>
        <p class="mb-0"><strong>Rate:</strong> <%= fdRate %></p>
      </div>
    </div>
    <% } %>

    <% if (!savingsAccountNo) { %>
    <div class="my-4">
      <form method="POST" action="/add-account">
        <input type="hidden" name="cusId" value="<%= cusId %>" />
        <input type="hidden" name="acc_t" value="s" />
        <button type="submit" class="btn btn-secondary">Add Savings Account</button>
      </form>
    </div>
    <% } %>

    <% if (!currentAccountNo) { %>
    <div class="my-4">
      <form method="POST" action="/add-account">
        <input type="hidden" name="cusId" value="<%= cusId %>" />
        <input type="hidden" name="acc_t" value="c" />
        <button type="submit" class="btn btn-secondary">Add Current Account</button>
      </form>
    </div>
    <% } %>

    <% if (!fd_exist && savingsAccountNo) { %>
    <div class="my-4">
      <form method="POST" action="/add-fd">
        <input type="hidden" name="cusId" value="<%= cusId %>" />
        <button type="submit" class="btn btn-secondary">Add FD</button>
      </form>
    </div>
    <% } %>

    <% if (!loan_exist) { %>
    <div class="my-4">
      <form method="POST" action="/request-loan">
        <input type="hidden" name="cusId" value="<%= cusId %>" />
        <button type="submit" class="btn btn-secondary">Request LOAN</button>
      </form>
    </div>
    <% } %>
  </div>
</div>

<%- include('partials/footer.ejs') %>
