<%- include('partials/header.ejs') %>

<style>
  form {
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-top: 50px;
  }

  label {
    font-size: 20px;
    margin-bottom: 10px;
    color: #333333; /* changed color to a darker shade of gray */
  }

  input[type="number"],
  select {
    padding: 10px;
    border-radius: 5px;
    border: none;
    margin-bottom: 20px;
    font-size: 18px;
    color: #555555; /* changed color to a darker shade of gray */
  }

  input[type="submit"] {
    background-color: #4caf50;
    color: white;
    padding: 12px 20px;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    font-size: 20px;
  }

  input[type="submit"]:hover {
    background-color: #45a049;
  }
</style>

<form action="/requested-loan" method="POST">
  <input type="hidden" id="cus_id" name="cus_id" value="<%= cusId %>" />

  <label for="loan_amount">Loan Amount:</label>
  <input
    type="number"
    min="0"
    id="loan_amount"
    name="loan_amount"
  /><br /><br />

  <label for="interest_rate">Interest Rate:</label>
  <select id="interest_rate" name="interest_rate">
    <option value="12.50">12.50</option>
    <option value="13.50">13.50</option></select
  ><br /><br />

  <label for="installment_nos">No. of Installments:</label>
  <select id="installment_nos" name="installment_nos">
    <option value="10">10</option>
    <option value="12">12</option>
    <option value="24">24</option></select
  ><br /><br />

  <input type="submit" value="Submit" />
</form>

<%- include('partials/footer.ejs') %>
