<%- include('partials/header') %>
<style>
  .loginBody {
  font-family: "Roboto", sans-serif;
  font-size: 16px;
  color: #333;
  margin: 0;
  padding: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  height: 80vh;
  background: #454545;
}

.login-h1 {
  text-align: center;
  margin-bottom: 20px;
  font-size: 32px;
  font-family: "Roboto", sans-serif;
  color: #333;
  text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);
  transition: color 0.3s ease;
  cursor: pointer;
}

.login-h1:hover {
  color: #454545;
}
.loginForm {
  width: 70%;
  max-width: 400px; /* Increased max-width for better form layout */
  margin: 0 auto;
  padding: 40px 20px;
  background-color: #fff;
  border-radius: 10px;
  box-shadow: 0 0 20px rgba(0, 0, 0, 0.4); /* Increased box-shadow */
}

input {
  width: 100%;
  padding: 10px;
  box-sizing: border-box;
  border: 1px solid #ccc;
  border-radius: 5px;
  font-size: 16px;
  font-family: "Roboto", sans-serif;
  margin-right: 10px;
  margin-bottom: 20px;
  margin-top: 5px;
}

.loginButton {
  width: 100%;
  padding: 10px;
  box-sizing: border-box;
  border: 0;
  border-radius: 5px;
  background-color: #333; /* Green button background */
  color: #fff;
  font-size: 16px;
  font-family: "Roboto", sans-serif;
  cursor: pointer;
  transition: background-color 0.3s ease;
}

.loginButton:hover {
  background-color: #454545;
}
</style>
    <div class="loginBody">
      <div class="loginForm" >
        <h1 class="login-h1">Login</h1>
        <form action="/dashboard" method="POST">
          <div class="x">
            <label for="username">Username</label>
            <input
              type="text"
              name="username"
              id="username"
              placeholder="Username"
              required
            />
          </div>
          <div class="x">
            <label for="password">Password</label>
            <input
              type="password"
              name="password"
              id="password"
              placeholder="Password"
              required
            />
          </div>
          <button class="loginButton" type="submit">Login</button>
        </div>
      </form>
    </div>
<%-include('partials/footer')%>