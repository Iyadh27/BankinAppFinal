<%- include('partials/header') %>

<h2 class="text-center mt-5">Fixed Deposits</h2>

<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-5">
      <div class="card mb-3">
        <div class="card-body">
          <p class="card-text">Fixed Deposit ID: <%= fd_id %></p>
          <p class="card-text">Amount: <%= amount %></p>
          <p class="card-text">Start Date: <%= startDate %></p>
        </div>
      </div>
    </div>
    <div class="col-md-5">
      <div class="card text-center">
        <div class="card-body">
          <h2 class="card-title">Interest Rate:</h2>
          <p class="interest-rate"><%= rate %></p>
        </div>
      </div>
    </div>
  </div>
</div>

<% if (loanID) { %>
<div class="container mt-5">
  <div class="card">
    <div class="card-body">
      <h2 class="card-title">Request an Online Loan</h2>
      <form action="/request-loan-online" method="POST">
        <div class="mb-3">
          <label for="amount" class="form-label">Loan Amount:</label>
          <input type="number" class="form-control loan-input" id="amount" name="amount" required>
        </div>
        <div class="mb-3">
          <label for="duration" class="form-label">Loan Duration (in months):</label>
          <input type="number" class="form-control loan-input" id="duration" name="duration" required>
        </div>
        <button type="submit" class="btn btn-primary loan-submit-button">Submit</button>
      </form>
    </div>
  </div>
</div>
<% } %>

<%- include('partials/footer') %>
